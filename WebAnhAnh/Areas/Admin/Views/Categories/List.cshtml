@using WebAnhAnh.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.BasePagedList<Category>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminn.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>List</h1>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CategoryName
            </th>
            <th>
              Describe
            </th>
            <th>
               Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <form id="deleteForm-@item.CategoryId" asp-action="Delete" asp-route-id="@item.CategoryId" method="post">
                        <button type="button" onclick="confirmDelete(@item.CategoryId)">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("List", new { page = page }))
</div>


<script>
    function confirmDelete(CategoryId) {
        if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?')) {
            document.getElementById('deleteForm-' + CategoryId).submit();
        }
    }
</script>