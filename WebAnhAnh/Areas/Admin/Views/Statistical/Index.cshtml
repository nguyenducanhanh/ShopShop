
@{
    ViewData["Title"] = "Báo cáo thống kê";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminn.cshtml";
}


<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
   
                <h4 class="font-weight-normal mb-3">
                    Doanh Thu  <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">$ @ViewBag.GetTotalMoneySum usd</h2>
                <h6 class="card-text">Lợi nhuận sau thuế:  CHƯA LÀM </h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                
                <h4 class="font-weight-normal mb-3">
                    Tổng Hóa Đơn <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.OrdersCount</h2>
                <h6 class="card-text">Tổng sản phẩm đã đặt  @ViewBag.GetOrderDetailIdsCount</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                
                <h4 class="font-weight-normal mb-3">
                    Tài Khoản Đăng Ký <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.RegisteredAccountsCount</h2>
                <h6 class="card-text">Tài khoản bị khóa  CHƯA LÀM</h6>
            </div>
        </div>
    </div>
</div>