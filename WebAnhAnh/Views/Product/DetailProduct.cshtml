
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "_LayoutProducts";
}
@model WebAnhAnh.Repository.DetailProductsRepository



<style>
    .quantity {
        display: flex;
        align-items: center;
    }

        .quantity input {
            width: 50px;
            text-align: center;
            border: 1px solid red;
            border-radius: 3px;
            font-size: 16px;
            padding: 5px;
            margin: 0 5px;
        }

        .quantity button {
            background-color: yellow;
            color: green;
            border: none;
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 3px;
        }

            .quantity button:hover {
                background-color: #45a049;
            }
</style>


<!-- background bg start -->
<div class="background_bg">
    <h2 class="watchs_taital">       </h2>
    <!-- watchs section start -->
    <div class="watchs_section layout_padding">

        <div class="container">
            <h1 class="watchs_taital"> @await Component.InvokeAsync("MenuCategory")<br>@Model.ProductName </h1>
            <br />
            <div class="watchs_section_2">
                <div class="row">
                    @* <div class="col-md-6">
                        <div class="image_1"><img style="height:400px;border-radius:20px" src="~/images/@Model.Image"></div>
                    </div> *@
                  
                    <section class="py-5">
                        <div class="container">
                            <div class="row gx-5">
                                <aside class="col-lg-6">
                                    <div class="border rounded-4 mb-3 d-flex justify-content-center">
                                        <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big.webp">
                                            <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="~/images/@Model.Image" />

                                        </a>
                                    </div>
                                    <div class="d-flex justify-content-center mb-3">
                                        <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="~/images/@Model.Image1" class="item-thumb">
                                            <img width="60" height="60" class="rounded-2" src="~/images/@Model.Image1" />
                                        </a>
                                        <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="~/images/@Model.Image2" class="item-thumb">
                                            <img width="60" height="60" class="rounded-2" src="~/images/@Model.Image2" />
                                        </a>


                                    </div>
 
                                </aside>


                   
                    <div style="color:red" class="col-lg-6">
                        <h2 style="color:red" class="fw-bold mb-3">Tên sản phẩm :  @Model.ProductName</h2>
                        <h2 style="color:red;" class="mb-3">
                            Loại :  @Model.CategoryName</h2>
                        <h2 class="fw-bold mb-3" style="color:red;">@Model.Price $</h2>
                        <div style="color:yellow" class="d-flex mb-4">
                            <i class="fa fa-star "></i>
                            <i class="fa fa-star "></i>
                            <i class="fa fa-star "></i>
                            <i class="fa fa-star "></i>
                            <i class="fa fa-star text-secondary"></i>
                        </div>
                        <h2 style="color:red;" class="mb-4">@Model.Describe</h2>

                           <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.ProductID">
                        <div class="row" style="margin-left:7px">
                            <div class="quantity">
                                    <button type="button" onclick="decreaseQuantity()">-</button>
                                <input name="quantity" type="number" id="quantityInput" value="1" min="0">
                                    <button type="button" onclick="increaseQuantity()">+</button>
                            </div>
                                <button style="margin-left:100px;margin-top:30px" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</button>

                            </div>
                        </form>
                     </div>
                </div>
            </div>
           
            <div class="seemore_bt"><a href="#">See More</a></div>
        </div>
    </div>
    <!-- watchs section end -->
</div>


<script>
    function increaseQuantity() {
        var input = document.getElementById("quantityInput");
        var value = parseInt(input.value);
        input.value = value + 1;
    }

    function decreaseQuantity() {
        var input = document.getElementById("quantityInput");
        var value = parseInt(input.value);
        if (value > 0) {
            input.value = value - 1;
        }
    }
</script>



      

